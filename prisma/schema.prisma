model Todos {
  id         Int         @id @default(autoincrement())
  task       String
  completed  Boolean?
  dueDate    DateTime?
  categoryId Int?
  category   Categories? @relation(fields: [categoryId], references: [id])
  createdAt  DateTime?
  updatedAt  DateTime?
  deletedAt  DateTime?
}

model Categories {
  id        Int       @id @default(autoincrement())
  title     String    @unique
  todos     Todos[]
  createdAt DateTime?
  updatedAt DateTime?
  deletedAt DateTime?
}

